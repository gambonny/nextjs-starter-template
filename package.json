{
  "name": "powder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "next lint --dir .",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "next": "13.0.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "eslint": "8.28.0",
    "eslint-config-next": "13.0.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "prisma": "^4.6.1",
    "typescript": "4.9.3",
    "tailwindcss": "^3.2.0",
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "prettier-plugin-tailwindcss": "^0.1.13"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx, css}": [
      "npx eslint --fix",
      "npx prettier --write --ignore-unknown"
    ]
  }
}
